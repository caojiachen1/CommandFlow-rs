{
  "productName": "CommandFlow-rs",
  "version": "0.1.0",
  "identifier": "com.commandflow.rs",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CommandFlow-rs",
        "width": 1440,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "capabilities": [
        "default",
        "automation"
      ]
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ]
  }
}